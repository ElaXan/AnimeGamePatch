binary=/data/data/com.termux/files/usr/bin/zex
versionBashIn1="2.2"
updateNotif="1. Make code no need to Exit termux when already install pipx\n\n2. Make UI or selection for install / changedomain / run mitmproxy\n\n3. Add some code in zex run for fix issue error \"Address already in used\""
updateNote="There is new version to"
link=null
printLatest="This is Latest Version (Ver : $versionBashIn1)"
whatTheFuckEditVersion="Something wrong with version.\nThis version different from the server\n\nServer Latest Version : $versionBashIn1\nVersion Script : $versionBash1\n\nversion too latest from server"
updateScript1() {
    command cd
    updateDir=$HOME/updatezex
    scriptUpdate=$updateDir/zinstall
    if [[ -f $binary ]]; then
       rm $binary
    fi
    mkdir $updateDir
    cd $updateDir
    echo "Update Script!"
    if ! command -v git &> /dev/null; then
       pkg install git
    fi
    git clone https://github.com/ElaXan/AnimeGamePatch.git &> /dev/null
    if [[ $? != 0 ]]; then
       echo "Can't do update Script. Make sure you internet is ON or stable"
       rm $updateDir
       command cd
       exit
    else
       cd AnimeGamePatch
       mv zex.sh $binary
       command cd
       rm -rf $updateDir
       command clear
       echo "Update success!"
       sleep 1s
       echo "Settings permission!"
       chmod +x $binary
       sleep 1s
       echo "Done!"
       sleep 1s
       command clear
       echo "Please enter command zex again!"
       exit
    fi
}
